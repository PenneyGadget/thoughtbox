<h4>Your Lovely Links:</h4>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Link Title</th>
      <th>URL</th>
      <th>Fix It</th>
      <th>Read?</th>
    </tr>
    <% @links.each do |link| %>
    <tr id="link-<%=link.id%>">
      <td class="link-title">
        <%= link.title %>
      </td>
      <td class="link-url">
        <%= link_to link.url %>
      </td>
      <td>
        <%= link_to "Edit", edit_link_path(link) %>
      </td>
      <td>
        <%= link.read %>
      </td>
    </tr>
    <% end %>
  </thead>
</table>

<h2>Add A New Link</h2>
<%= form_for Link.new, url: links_path do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.submit "Add New Link" %>

<% end %>
